<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"

            android:layout_weight="0.41">
            <TextView
                android:layout_width="92dp"
                android:layout_height="29dp"
                android:text="Activity 2"
                android:textColor="@color/abc_background_cache_hint_selector_material_light"
                android:layout_gravity="right"
                android:layout_weight="0.41"
                android:id="@+id/tv_activity_2" />

            <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="TIME"
                android:id="@+id/tv_time_2"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="@color/abc_background_cache_hint_selector_material_light" />


        </FrameLayout>

        <TextView
            android:layout_width="360dp"
            android:layout_height="53dp"
            android:text="what is the fraction of testing tubes which are filled"
            android:id="@+id/tv_que"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="175dp"
            android:layout_gravity="left|top"
            android:textSize="18dp"
            android:textColor="@color/abc_input_method_navigation_guard" />

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="left|center_vertical"
            android:id="@+id/fm_1">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton1"
                android:layout_gravity="left|center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="-30dp"
            android:layout_gravity="center"
            android:id="@+id/fm_2">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton"
                android:layout_gravity="left|center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="73dp"
            android:layout_height="38dp"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:id="@+id/fm_3">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton2"
                android:layout_gravity="left|center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="81dp"
            android:layout_height="35dp"
            android:layout_marginRight="190dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/fm_4">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButton3"
                android:layout_gravity="left|center_vertical" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:id="@+id/fm_bt_sub"
            android:layout_gravity="right|bottom">

        </FrameLayout>

        <Button
            android:layout_width="97dp"
            android:layout_height="38dp"
            android:text="submit"
            android:id="@+id/bt_submit"
            android:layout_gravity="right|bottom"
            android:textColor="@color/abc_primary_text_disable_only_material_light" />


    </FrameLayout>

</LinearLayout>